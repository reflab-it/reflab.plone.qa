<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="reflab.plone.qa"
      metal:use-macro="context/main_template/macros/master">
<body>
  <metal:block fill-slot="main">

    <h1 class="documentFirstHeading">${view/title}</h1>

   <div class="pat-autotoc autotabs"
         data-pat-autotoc="section:fieldset;levels:legend;">
       <fieldset>
         <legend>Answers</legend>
         <dl>
            <tal:answer repeat="item view/answers">
            <dt><a href="${item/absolute_url}">${item/title}</a></dt>
            <dd>
                <strong>Comments:</strong> xxx
                <strong>Points:</strong> xxx
            </dd>
            </tal:answer>
         </dl>
       </fieldset>
       <fieldset>
         <legend>Settings</legend>
         <div>
          <tal:block repeat="widget view/widgets/values">
              <div class="field">
                  <label tal:content="widget/label" />
                  <br />
                  <div tal:content="structure widget/render" />
              </div>
          </tal:block>

          <div tal:repeat="group view/groups"
                    tal:attributes="id python:''.join((group.prefix, 'groups.', group.__name__)).replace('.', '-')">
              <h3 tal:content="group/label" />
              <div class="field" tal:repeat="widget group/widgets/values">
                  <label tal:content="widget/label" />
                  <br />
                  <div tal:content="structure widget/render" />
              </div>
          </div>

         </div>
       </fieldset>
   </div>    

  </metal:block>
</body>
</html>
